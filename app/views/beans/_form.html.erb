<%= form_for(bean) do |f| %>
  <% if bean.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bean.errors.count, "error") %> prohibited this bean from being saved:</h2>

      <ul>
      <% bean.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="type">
      <div class="field">
        <%= f.label :roaster_id %>
        <%= f.collection_select(:roaster_id, Roaster.all, :id, :name) %>
      </div>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_area :name %>
      </div>

      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description %>
      </div>

      <% if bean.image_stored? %>
        <p>Current image:</p>
        <div>
          <%= image_tag bean.image.thumb('200x200#').url %>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>

      <div class="field">
        <%= f.label :roast %>
        <%= f.text_field :roast %>
      </div>

      <div class="actions">
        <%= f.submit 'Save', class: 'button' %>
      </div>
    </div>
  </div>
<% end %>
